---
// src/layouts/AdminLayout.astro
import BaseLayout from './BaseLayout.astro';
import { AdminSidebar } from '@/components/admin/layout/AdminSidebar'; 
import AdminHeader from '@/components/admin/layout/AdminHeader.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title} noindex={true}>
  <div class="flex h-screen bg-secondary-50">
    
    {/* ✅ AGREGAMOS: transition:persist 
       Esto hace que el Sidebar NO se recargue al navegar. 
       El estado de React (abierto/cerrado) se mantiene intacto entre páginas.
    */}
    <div transition:persist>
        <AdminSidebar client:only="react" />
    </div>
    
    <div class="flex-1 flex flex-col overflow-hidden">
      <AdminHeader />
      
      {/* Opcional: transition:animate="fade"
         Hace que el contenido viejo se desvanezca y el nuevo aparezca suavemente.
      */}
      <main class="flex-1 overflow-y-auto" transition:animate="fade">
        <div class="container-custom py-8">
          <slot />
        </div>
      </main>
    </div>
  </div>
</BaseLayout>