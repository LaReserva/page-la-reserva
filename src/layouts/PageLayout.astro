---
// src/layouts/PageLayout.astro
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  noindex?: boolean; // ✅ 1. Agregamos la propiedad opcional aquí
}

const { 
  title, 
  description, 
  image, 
  noindex = false // ✅ 2. La desestructuramos con valor por defecto
} = Astro.props;
---

{/* ✅ 3. Se la pasamos al BaseLayout */}
<BaseLayout title={title} description={description} image={image} noindex={noindex}>
  <Header />
  
  <main class="min-h-screen">
    <slot />
  </main>
  
  <Footer />
</BaseLayout>