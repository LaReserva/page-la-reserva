---
// src/pages/admin/testimonios.astro
export const prerender = false;

import AdminLayout from '@/layouts/AdminLayout.astro';
// Asegúrate de importar el componente de React que definimos antes
import { FeedbackManager } from '@/components/admin/feedback/FeedbackManager.tsx';

const title = "Gestión de Testimonios | La Reserva Admin";
---

<AdminLayout title={title}>
  
  <div class="mb-8">
    {/* Breadcrumbs estilo 'correo.astro' */}
    <div class="flex items-center gap-2 mb-1">
      <span class="text-primary-600 font-bold text-xs tracking-wider uppercase bg-primary-50 px-2 py-0.5 rounded">
        Calidad
      </span>
      <span class="text-secondary-400 text-xs">
        / Feedback Post-Evento
      </span>
    </div>
    
    {/* Encabezado Principal */}
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
      <div>
        <h1 class="text-3xl font-display font-bold text-secondary-900">
          Control de Testimonios
        </h1>
        <p class="text-secondary-500 mt-1">
          Solicita feedback a clientes de eventos finalizados y modera las opiniones visibles en la web.
        </p>
      </div>
    </div>
  </div>

  {/* El componente React que maneja la lógica de Tabs (Pendientes/Recibidos) */}
  <FeedbackManager client:load />

</AdminLayout>

<script>
  import { supabase } from '@/lib/supabase';

  async function protectRoute() {
    const { data: { session } } = await supabase.auth.getSession();
    if (!session) {
      window.location.href = '/admin/login';
    }
  }
  
  protectRoute();
</script>