---
// src/pages/admin/correo.astro
export const prerender = false;

import AdminLayout from '@/layouts/AdminLayout.astro';
import { MessagesView } from '@/components/admin/correo/MessagesView.tsx';

const title = "Bandeja de Entrada | La Reserva Admin";
---

<AdminLayout title={title}>
  
  <div class="mb-8">
    <div class="flex items-center gap-2 mb-1">
      <span class="text-primary-600 font-bold text-xs tracking-wider uppercase bg-primary-50 px-2 py-0.5 rounded">Comunicaciones</span>
      <span class="text-secondary-400 text-xs">/ Mensajer√≠a</span>
    </div>
    
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
      <div>
        <h1 class="text-3xl font-display font-bold text-secondary-900">
          Mensajes de Contacto
        </h1>
        <p class="text-secondary-500 mt-1">
          Gestiona los correos recibidos desde el formulario web y responde directamente.
        </p>
      </div>
    </div>
  </div>

  <MessagesView client:load />

</AdminLayout>

<script>
  import { supabase } from '@/lib/supabase';

  async function protectRoute() {
    const { data: { session } } = await supabase.auth.getSession();
    if (!session) {
      window.location.href = '/admin/login';
    }
  }
  
  protectRoute();
</script>