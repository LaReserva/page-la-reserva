---
// src/pages/admin/perfil.astro

// ✅ ESTA LÍNEA ES OBLIGATORIA para paneles de administración protegidos
export const prerender = false;

import AdminLayout from '@/layouts/AdminLayout.astro';
import { ProfileView } from '@/components/admin/profile/ProfileView';

const title = "Mi Perfil | La Reserva Admin";
---

<AdminLayout title={title}>
  <div id="profile-content" class="opacity-0 transition-opacity duration-300">
    <div class="mb-8">
      <div class="flex items-center gap-2 mb-1">
        <span class="text-secondary-500 font-bold text-xs tracking-wider uppercase bg-secondary-100 px-2 py-0.5 rounded">Cuenta</span>
        <span class="text-secondary-400 text-xs">/ Configuración</span>
      </div>
      <h1 class="text-3xl font-display font-bold text-secondary-900">
        Mi Perfil
      </h1>
      <p class="text-secondary-500 mt-1">
        Administra tu información personal y seguridad.
      </p>
    </div>

    <ProfileView client:load />
  </div>
</AdminLayout>

<script>
  import { supabase } from '@/lib/supabase';

  async function checkSession() {
    const { data: { session } } = await supabase.auth.getSession();
    
    if (!session) {
      // Si no hay sesión, redirigir al login
      window.location.href = '/admin/login';
    } else {
      // Si hay sesión, mostrar el contenido
      const content = document.getElementById('profile-content');
      if (content) {
        content.classList.remove('opacity-0');
      }
    }
  }

  checkSession();
</script>