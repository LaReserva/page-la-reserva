// ✅ Modo SSR activado (OBLIGATORIO)
export const prerender = false;

import Layout from '@/layouts/AdminLayout.astro';
import { CocktailManager } from '@/components/admin/recipes/CocktailManager';

// Metadatos
const title = "Gestor de Cocteles y Recetas | La Reserva";
---

<Layout title={title}>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
