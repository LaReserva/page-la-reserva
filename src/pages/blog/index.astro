---
// src/pages/blog/index.astro
export const prerender = false;

import PageLayout from '@/layouts/PageLayout.astro';
import Card from '@/components/ui/Card.astro';
import { supabase } from '@/lib/supabase';
import { Calendar, ArrowRight } from 'lucide-react';
import { format } from 'date-fns';
import { es } from 'date-fns/locale';

const { data: posts } = await supabase
  .from('blog_posts')
  .select('*')
  .eq('published', true)
  .order('created_at', { ascending: false });

const title = "Blog & Novedades | La Reserva";
const description = "Descubre consejos de coctelería, tendencias para eventos y el detrás de escena de nuestros servicios.";
---

<PageLayout title={title} description={description}>
  {/* Hero Section */}
  <section class="bg-secondary-900 text-white py-20 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-[url('/images/pattern.png')]"></div>
    <div class="container-custom relative z-10 text-center max-w-3xl mx-auto">
      <span class="text-primary-500 font-bold tracking-widest uppercase text-sm mb-4 block animate-fade-in-up">
        La Reserva Journal
      </span>
      <h1 class="text-4xl md:text-5xl font-display font-bold mb-6 animate-fade-in-up delay-100 text-white">
        Historias detrás de <br/><span class="text-primary-500">cada copa</span>
      </h1>
      <p class="text-secondary-300 text-lg leading-relaxed animate-fade-in-up delay-200">
        Explora nuestro mundo de mixología, consejos para organizar tu boda perfecta y las últimas tendencias en barras móviles.
      </p>
    </div>
  </section>

  {/* Grid de Artículos */}
  <section class="py-16 bg-secondary-50 min-h-[50vh]">
    <div class="container-custom">
      {!posts || posts.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-secondary-400 text-lg">Aún no hay artículos publicados. Vuelve pronto.</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <Card hover class="flex flex-col h-full border-t-4 border-t-transparent hover:border-t-primary-500 transition-all duration-300 group">
              
              {/* ✅ 1. IMAGEN CLICABLE: Envolvemos la imagen en un enlace */}
              <a href={`/blog/${post.slug}`} class="aspect-video bg-secondary-200 overflow-hidden relative block cursor-pointer">
                {post.image_url ? (
                  <img 
                    src={post.image_url} 
                    alt={post.title} 
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-secondary-300 bg-secondary-100">
                    <span class="font-display italic">La Reserva</span>
                  </div>
                )}
                {/* Fecha Badge */}
                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold text-secondary-900 shadow-sm flex items-center gap-1">
                  <Calendar size={12} className="text-primary-500" />
                  {format(new Date(post.created_at), 'd MMM yyyy', { locale: es })}
                </div>
              </a>

              {/* Contenido */}
              <div class="p-6 flex-1 flex flex-col">
                <h3 class="text-xl font-display font-bold text-secondary-900 mb-3 leading-tight group-hover:text-primary-600 transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.title}
                  </a>
                </h3>
                <p class="text-secondary-500 text-sm leading-relaxed mb-6 line-clamp-3 flex-1">
                  {post.excerpt}
                </p>
                
                {/* ✅ 2. FOOTER CLICABLE: Envolvemos "Leer artículo" y la flecha */}
                <div class="pt-4 border-t border-secondary-100">
                  <a href={`/blog/${post.slug}`} class="flex items-center justify-between group/link cursor-pointer">
                    <span class="text-xs font-bold text-primary-600 uppercase tracking-wider group-hover/link:underline">Leer artículo</span>
                    <div class="w-8 h-8 rounded-full bg-secondary-50 flex items-center justify-center text-secondary-400 group-hover:bg-primary-500 group-hover:text-white transition-all">
                      <ArrowRight size={16} />
                    </div>
                  </a>
                </div>

              </div>
            </Card>
          ))}
        </div>
      )}
    </div>
  </section>
</PageLayout>