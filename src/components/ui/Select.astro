---
// src/components/ui/Select.astro
import type { HTMLAttributes } from 'astro/types';
import { cn } from '@/utils/utils';

export interface Option {
  value: string | number;
  label: string;
  disabled?: boolean;
}

interface Props extends HTMLAttributes<'select'> {
  name: string;
  id?: string;
  label?: string;
  options: Option[];
  error?: string;
  hint?: string;
  placeholder?: string; // Texto para la opción vacía por defecto
}

const {
  name,
  id = name,
  label,
  options,
  error,
  hint,
  placeholder,
  class: className,
  ...rest
} = Astro.props;

const selectClasses = cn(
  // Base styles
  'w-full px-4 py-3 border rounded-lg transition-all duration-200 appearance-none',
  'bg-white text-secondary-900',
  
  // Focus styles
  'focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent',
  
  // Disabled state
  'disabled:bg-secondary-50 disabled:text-secondary-400 disabled:cursor-not-allowed',
  
  // Error state
  error 
    ? 'border-red-500 focus:ring-red-500 text-red-900' 
    : 'border-secondary-200',
    
  className
);
---

<div class="space-y-2 relative">
  {label && (
    <label for={id} class="block text-sm font-semibold text-secondary-700">
      {label}
      {rest.required && <span class="text-red-500 ml-1">*</span>}
    </label>
  )}
  
  <div class="relative">
    <select
      name={name}
      id={id}
      class={selectClasses}
      {...rest}
    >
      {placeholder && (
        <option value="" disabled selected={!rest.value}>
          {placeholder}
        </option>
      )}
      
      {options.map((option) => (
        <option 
          value={option.value} 
          disabled={option.disabled}
          selected={String(rest.value) === String(option.value)}
        >
          {option.label}
        </option>
      ))}
    </select>
    
    {/* Custom Chevron Icon */}
    <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none text-secondary-500">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </div>
  
  {error && (
    <p class="text-sm text-red-500 flex items-center gap-1 animate-fade-in">
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      {error}
    </p>
  )}
  
  {hint && !error && (
    <p class="text-sm text-secondary-500">
      {hint}
    </p>
  )}
</div>